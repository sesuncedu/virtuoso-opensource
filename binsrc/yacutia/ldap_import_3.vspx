                        </td>
                    </tr>
                  </table>
                  <table class="tab_page">
                    <tr>
                      <td valign="top">
<v:form name="map_ldap" type="simple" method="POST" action="accounts_page.vspx?page=1">
	<div>&nbsp;</div>
	<table  class="listing">
<tr  class="listing_header_row">
  <th>
    Login Name
  </th>
<th>Name</th>
<th>Status</th>
</tr>
<?vsp
     declare i, l int;
     declare ar, res any;
     declare uid, name, stat varchar;
     if (self.res is not null)
       {
     res := self.res;
     i := 0; l := length (res);
     while (i < l)
       {
	    uid := res[i][0];
	    name := res[i][1];
	    stat := res[i][4];
  ?>
            <tr>
	    <td class="gendata"><?V uid ?></td><td class="gendata"><?V name ?></td>
	    <td  CLASS="gendata"><?V stat ?></td>
	    </tr>
<?vsp
	 i := i + 1;
        }
        }
 ?>
       <tr>
	 <td colspan="3">
	   <v:button name="go" value="Finish" action="simple"/>
	 </td>
     </tr>
	</table>
      </v:form>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
